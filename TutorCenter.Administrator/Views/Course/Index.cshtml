@model List<TutorCenter.Application.Contracts.Courses.Dtos.CourseForListDto>
@{
    int i = 0;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Courses</h5>

        <a type="button" class="btn btn-success rounded-pill" asp-action="Create" asp-controller="Course">Create</a>


        <!-- Table with stripped rows -->
        <table id="example" class="table datatable">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Subject</th>
                <th scope="col">Status</th>
                <th scope="col">Academic Level</th>
                <th scope="col">Gender Requirement</th>
                <th scope="col">Learning mode</th>
                <th data-sortable="false" scope="col" style="width:30%;">Actions</th>

            </tr>
            </thead>
            <tbody>

            @foreach (var course in Model)
            {
                i++;
                <tr>
                    <th scope="row">
                        <input hidden name="Id" value="@course.Id"/>
                        @i
                    </th>
                    <td>@course.Title</td>
                    <td>@course.SubjectName</td>
                    <td>@course.Status</td>
                    <td>@course.AcademicLevelRequirement</td>
                    <td>@course.GenderRequirement</td>
                    <td>@course.LearningMode</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.Id">Edit</a>|
                        <a asp-action="Detail" asp-route-id="@course.Id">Details</a> |
                        <a href="#" onclick="OpenGetDialog('@Url.Action("Delete", "Course", new { id = course.Id })',
                                                                'Are you sure you want to delete this class?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->
    </div>
</div>