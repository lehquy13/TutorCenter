@using TutorCenter.Application.Contracts.Subjects
@model List<SubjectDto>
@{
    int i = 0;
}


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Subjects</h5>
        <div class="col ">
            <a type="button" class="btn btn-success rounded-pill" asp-action="Create" asp-controller="Subject">Create</a>

        </div>

        <!-- Table with stripped rows -->
        <table id="example" class="table datatable">
            <thead>
                <tr>

                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th data-sortable="false" scope="col" style="width:30%;">Actions</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var subject in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">
                            <input hidden value="@subject.Id" />
                            @i
                        </th>

                        <td>@subject.Name</td>
                        <td>@subject.Description</td>

                        <td>
                            <a class="bi btn btn-primary bi-arrow-up-short" asp-controller="Subject" asp-action="Edit" asp-route-id="@subject.Id">Edit</a>
                            @* <a href="#" onclick="OpenConfirmDialog('@Url.Action("DeleteConfirmed","Subject",new {id = @subject.Id})','Are you sure you want to delete this subject?');">Delete</a> *@
                        </td>
                    </tr>
                }


            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>
</div>