@model List<TutorCenter.Contracts.Users.Tutors.TutorForListDto>
@{
    int i = 0;
}
 <div class="pagetitle">
      <h1>User Management</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item active">Tutors</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
<a type="button" class="btn btn-success rounded-pill" asp-action="Create" asp-controller="Tutor">Create</a>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Tutors</h5>

        <!-- Table with stripped rows -->
        <table id="example" class="table datatable">
            <thead>
                <tr>
                    <!-- a avatar comlumn will be added -->
                    <th scope="col">#</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Academic Level</th>
                    <th scope="col">University</th>
                    <th scope="col">Phone Number</th>
                    <th data-sortable="false" scope="col" style="width:30%;">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">
                            <input hidden name="Id" value="@user.Id" />
                            @i
                        </th>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.AcademicLevel.ToString()</td>
                        <td>@user.University</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>|
                            <a asp-action="Detail" asp-route-id="@user.Id">Details</a> |
                            
                            <a href="#" onclick="OpenGetDialog('@Url.Action("Delete","Tutor",new {id = user.Id})','Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->
    </div>
</div>
